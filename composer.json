{
    "name": "phantom-d/yii2-file-daemon",
    "description": "Yii2 daemon for the file processing",
    "type": "yii2-extension",
    "keywords": ["yii2", "extension", "daemon"],
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Ermolovich",
            "email": "anton.ermolovich@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "ext-curl": "*",
        "yiisoft/yii2": ">=2.0.4",
        "yiisoft/yii2-redis": "*"
    },
    "require-dev": {
        "codeception/codeception": "2.0.*",
        "codeception/specify": "*",
        "codeception/verify": "*",
        "yiisoft/yii2-codeception": "^2.0",
        "yiisoft/yii2-faker": "*"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "autoload": {
        "psr-4": {
            "phantomd\\filedaemon\\": ""
        }
    }
}
